{
  "name": "playwright-mcp-owasp-server",
  "version": "1.0.0",
  "description": "MCP server for OWASP Top 10 security testing with Playwright",
  "type": "module",
  "bin": {
    "playwright-mcp-owasp-server": "./build/index.js"
  },
  "scripts": {
    "build": "tsc",
    "dev": "tsx src/index.ts",
    "start": "node build/index.js",
    "dashboard": "node build/live-dashboard.js",
    "build-dashboard": "tsc src/live-dashboard.ts --outDir build --target ES2022 --module ES2022 --moduleResolution node --esModuleInterop --allowSyntheticDefaultImports --resolveJsonModule --skipLibCheck"
  },
  "files": [
    "build"
  ],
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.0.0",
    "@types/express": "^5.0.3",
    "express": "^5.1.0",
    "playwright": "^1.40.0",
    "socket.io": "^4.8.1",
    "zod": "^3.22.0"
  },
  "devDependencies": {
    "@types/node": "^20.19.10",
    "tsx": "^4.0.0",
    "typescript": "^5.0.0"
  },
  "keywords": [
    "mcp",
    "owasp",
    "security",
    "playwright",
    "testing"
  ],
  "author": "Your Name",
  "license": "MIT"
}
